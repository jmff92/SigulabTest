<%= stylesheet_link_tag 'demo_table_jui.css'%>
<%= stylesheet_link_tag 'chemical_substances.css.scss'%>
<%= stylesheet_link_tag 'examples_support/themes/smoothness/jquery-ui-1.8.4.custom.css'%>
<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Sustancias Químicas </li>
</ol>  

    <div class="col-xs-12">
      <h1><i class="fa fa-flask"></i> Sustancias Químicas</h1>
    </div>

    <br>

    <%= form_tag (new_loan_path) do %>
    <div class="col-xs-12">
      <body id="dt_example" class="ex_highlight_row">

        <div id="container">
          <div id="demo">
            <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
              <thead>
                <tr>
                  <% if @sum > 0 %>
                    <th>Seleccionar</th>
                  <% end %>
                  <th class="text-center">Nombre</th>
                  <th class="text-center">Estado de la Materia</th>
                  <th class="text-center">Cantidad</th>
                  <th class="text-center">Medida</th>
                  <th class="text-center">Ubicación</th>
                  <th class="text-center">Responsable</th>
                </tr>
              </thead>

              <tbody>
                <% @chemical_substances.each do |chemical_substance| %>
                  <tr>
                    <% if @sum > 0 %>
                      <td class="tg-s6z2"><%= check_box_tag "item_ids[]", chemical_substance.id2 %></td>
                    <% end %>
                    <td class="text-center"><%= link_to chemical_substance.name, chemical_substance %></td>
                    <td class="text-center"><%= chemical_substance.matter_states %></td>
                    <td class="text-center"><%= chemical_substance.quantity %></td>
                    <td class="text-center"><%= chemical_substance.meassure %></td>
                    <td class="text-center"><%= chemical_substance.location %></td>
                    <td class="text-center"><%= chemical_substance.responsible %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>

      <p></p>

    </div>

      
            

    <br>


    <% if can? :create, @chemical_substance %>
      <i class="fa fa-plus-circle"></i><%= link_to ' Nueva Sustancia', new_chemical_substance_path, 'data-no-turbolink' => true, :class => 'linkButton'%> | 
    <%end%>
    <i class="fa fa-exchange"></i><%= submit_tag ' Solicitar Préstamo/Servicio ', :class => "linkButton" %> | 
    <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url, :class => 'linkButton' %>
    <% end %>
    <br><br><br><br><br><br><br>
    


 <style>

