    outline: thin dotted;
    outline-offset: -2px;
}

#LeDivQuimicas {
    background-image        : url('/assets/chemical.png');
    background-size         : 520px;  
    background-repeat       : no-repeat; 
    background-position   : bottom right; 
    background-color        : #FFFFFF;

}

.red {
    font-size               : 22px;
    color                   : red;
}

