<%= stylesheet_link_tag 'demo_table_jui.css'%>
<%= stylesheet_link_tag 'examples_support/themes/smoothness/jquery-ui-1.8.4.custom.css'%>
<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Sustancias Químicas </li>
</ol>  

<class="LaLa">
  <div id="LeDivQuimicas">

    <h1><i class="fa fa-flask"></i> Sustancias Químicas</h1>

     <br>

      <body class="ex_highlight_row">
        <div id="container">
          <div id="demo">

            <%= form_tag (new_loan_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <% if @sum > 0 %>
                      <th></th>
                    <% end %>
                    <th class="tg-093g">Nombre</th>
                    <th class="tg-093g">Estado de la Materia</th>
                    <th class="tg-093g">Cantidad</th>
                    <th class="tg-093g">Medida</th>
                    <th class="tg-hgcj">Ubicación</th>
                    <th class="tg-hgcj">Responsable</th>
                   
                  </tr>
                </thead>

                <tbody>
                  <% @chemical_substances.each do |chemical_substance| %>
                    <tr>
                      <% if @sum > 0 %>
                        <td class="tg-s6z2"><%= check_box_tag "item_ids[]", chemical_substance.id2 %></td>
                      <% end %>
                      <td class="tg-s6z2"><%= link_to chemical_substance.name, chemical_substance %></td>
                      <td class="tg-s6z2"><%= chemical_substance.matter_states %></td>
                      <td class="tg-s6z2"><%= chemical_substance.quantity %></td>
                      <td class="tg-s6z2"><%= chemical_substance.meassure %></td>
                      <td class="tg-s6z2"><%= chemical_substance.location %></td>
                      <td class="tg-qpa3"><%= chemical_substance.responsible %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>

    <br>


    <% if can? :create, @chemical_substance %>
      <i class="fa fa-plus-circle"></i><%= link_to ' Nueva Sustancia', new_chemical_substance_path, 'data-no-turbolink' => true %> | 
    <%end%>
    <i class="fa fa-exchange"></i><%= submit_tag ' Solicitar Préstamo/Servicio ', :class => "linkButton" %> | 
    <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url %>
    <% end %>
    <br><br><br><br><br><br><br>
    

  </div>
 </div>

 <style>

.linkButton { 
   text-decoration: none;
   text-align: right;
   color: #384157;
   font-weight: bold;
     background: none repeat scroll 0px 0px transparent;
     border: none;
}

.linkButton:hover {
    cursor: pointer;
    color: #8ED6FF;
    text-align: right;
    background: none repeat scroll 0% 0% #FFF;
    text-decoration: none;
}

.linkButton:focus {
    outline: thin dotted;
    outline-offset: -2px;
}

 </style>
