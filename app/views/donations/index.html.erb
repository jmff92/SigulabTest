<h1>Listing donations</h1>

<table>
  <thead>
    <tr>
      <th>Nombreitem</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Cantidad</th>
      <th>Unidadmedida</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.nombreItem %></td>
        <td><%= donation.marca %></td>
        <td><%= donation.modelo %></td>
        <td><%= donation.cantidad %></td>
        <td><%= donation.unidadMedida %></td>
        <td><%= donation.tipo %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
