<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Donaciones </li>
</ol>  




<div id="LeDivIntrumentos">
  <h1><i class="fa fa-gift"></i> Donaciones</h1>

  <br>
      <body class="ex_highlight_row">
        <div id="container">
          <div id="demo">

            <%= form_tag (new_donation_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <th class="tg-093g">ID de la Donación</th>
                    <th class="tg-093g">Nombre del Item</th>
                    <th class="tg-093g">Modelo</th>
                    <th class="tg-hgcj">Cantidad</th>
                   
                  </tr>
                </thead>

                <tbody>
                  <% @donations.each do |donation| %>
                    <tr>
                      <% if @sum > 0 %>
                      <% end %>
                      <td class="tg-s6z2"><%= link_to donation.id, donation %></td>
                      <td class="tg-s6z2"><%= donation.nombreItem %></td>
                      <td class="tg-s6z2"><%= donation.modelo %></td>
                      <td class="tg-s6z2"><%= donation.cantidad %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>


   <br>

    <% if can? :create, @donation %>
      <i class="fa fa-plus-circle"></i><%= link_to ' Nueva Donación', new_donation_path, 'data-no-turbolink' => true %> | 
    <%end%>
    <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url %>
    <% end %>
    <br><br><br><br><br><br><br>
    

  </div>
 </div>