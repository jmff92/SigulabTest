<h1>Nuevo Item a la Donación  <%= @donation_id%></h1>
<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
	<li> <%=link_to 'Inicio', controller: 'statics'%></li>
	<li> <%=link_to 'Inventario', inventario_url %></li>
	<li> <%=link_to 'Donaciones', donations_path %></li>
	<li class="active"> Nuevo Item Donado </li>
</ol>


<div id = "table2">
</div>

<div class ="Informacion">

<div class="col-xs-12">

    <table class="table table-striped">

    <%= form_for(@itemdonado) do |i| %>

 		<%= hidden_field_tag 'donation_id', @donation_id %>
    <table class="table table-striped">
          <tr>
            <td class="col-xs-5 text-right"><strong>Nombre:</strong></td>
            <td class="col-xs-7"> <%= i.text_field :Nombre %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Marca:</strong></td>
            <td class="col-xs-7"> <%= i.text_field :Marca %></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Modelo:</strong></td>
            <td class="col-xs-7"> <%= i.text_field :Modelo %>
            <span class="red">*</span></td>
          </tr>

          <tr>
            <td class="col-xs-5 text-right"><strong>Unidad de Medida:</strong></td>
            <td class="col-xs-7"> <%= i.text_field :UniDeMedida %></td>
          </tr>

            <tr>
            <td class="col-xs-5 text-right"><strong>Tipo:</strong></td>
            <td class="col-xs-7"><%= i.select(:tipo, [ ['Equipos/Mobiliarios'],['Instrumentos de Medición'],
              ['Herramientas'], ['Consumibles/Materiales'] ] ) %></td>
          </tr>

 

    </table>



      <div class="col-xs-12 text-center">
        <div class="actions">
          <button type="submit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-floppy-saved"></span>&nbsp;&nbsp;Crear</button>

          <%= link_to donations_path do %>
            <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atrás</button>
          <% end %>
        </div>
      </div>
        <br><br><br><br>
    </div>
  </div>

 <% end %>
