<%= stylesheet_link_tag 'demo_table_jui.css'%>
<%= stylesheet_link_tag 'examples_support/themes/smoothness/jquery-ui-1.8.4.custom.css'%>
<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Herramientas </li>
</ol>

  <% if flash[:notice] %>
    <div class="alert alert-danger"><%= flash[:notice] %></div>
  <% end %>

<div id="LeDivTools">
  <h1><i class="fa fa-wrench"></i>  Herramientas</h1>

  <br>

      <body class="ex_highlight_row">
        <div id="container">
          <div id="demo">

            <%= form_tag (new_loan_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <% if @sum > 0 %>
                      <th>Seleccionar</th>
                    <% end %>
                    <th class="tg-093g">Nombre</th>
                    <th class="tg-093g">De un juego</th>
                    <th class="tg-093g">N° de BN</th>
                    <th class="tg-hgcj">Ubicación</th>
                    <th class="tg-hgcj">Responsable</th>
                    <th class="tg-hgcj">Origen</th>
                   
                  </tr>
                </thead>

                <tbody>
                  <% @tools.each do |tool| %>
                    <tr>
                      <% if @sum > 0 %>
                        <td class="tg-s6z2"><%= check_box_tag "item_ids[]", tool.id2 %></td>
                      <% end %>
                      <td class="tg-s6z2"><%= link_to tool.name, tool %></td>
                      <td class="tg-s6z2"><%= tool.from_set %></td>
                      <td class="tg-s6z2"><%= tool.national_good %></td>
                      <td class="tg-s6z2"><%= tool.location %></td>
                      <td class="tg-qpa3"><%= tool.responsible %></td>
                      <td class="tg-qpa3"><%= tool.origen %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>


  <br>


<div class="col-xs-12" align="left">
  <p></p>
  <% if can? :create, @tool %>
    <%= link_to new_tool_path do %>
      <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Agregar Herramienta</button>
    <% end %>
  <% end %>
  <button type="submit" class="btn btn-default"><span class="fa fa-exchange"></span>&nbsp;&nbsp;Solicitar Préstamo/Servicio</button>
  <%= link_to inventario_url do %>
    <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atrás</button>
  <% end %>
</div>  

<% end %>      

  <br><br><br>


