<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
	<li> <%=link_to 'Inicio', controller: 'statics'%></li>
	<li> <%=link_to 'Inventario', inventario_url %></li>
	<li> <%=link_to 'Herramientas', tools_path %></li>
	<li class="active"> Ver </li>
</ol>

    <div class="col-xs-12">
        <table class="table table-striped">
          <tr>
            <td class="col-xs-5 text-right"><strong>Nombre:</strong></td>
            <td class="col-xs-7"><%= @tool.name %></td>
          </tr>   
          <tr>
            <td class="col-xs-5 text-right"><strong>Marca:</strong></td>
            <td class="col-xs-7"><%= @tool.brand %></td>
          </tr> 
           <tr>
            <td class="col-xs-5 text-right"><strong>Tipo:</strong></td>
            <td class="col-xs-7"><%= @tool.tipo %></td>
          </tr>
           <tr>
            <td class="col-xs-5 text-right"><strong>Número Bien Nacional:</strong></td>
            <td class="col-xs-7"><%= @tool.national_good %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Estado:</strong></td>
            <td class="col-xs-7"><%= @tool.status %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Responsable:</strong></td>
            <td class="col-xs-7"><%= @tool.responsible %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Dependencia:</strong></td>
            <td class="col-xs-7"><%= @tool.dependency %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Ubicación Física:</strong></td>
            <td class="col-xs-7"><%= @tool.location %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Material:</strong></td>
            <td class="col-xs-7"><%= @tool.material %></td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>De un juego:</strong></td>
            <td class="col-xs-7"><%= @tool.from_set %></td>
          </tr>
     

           <tr>
            <td class="col-xs-5 text-right"><strong>Uso:</strong></td>
              <td class="col-xs-7">   
              <% if @tool.investigation %>
              <%= ' INVESTIGACIÓN ' %>
            <% end %>
            <% if @tool.teaching %>
              <%= ' DOCENCIA ' %>
            <% end %>
            <% if @tool.extention %>
              <%= ' EXTENSIÓN ' %>
            <% end %>
            <% if @tool.management %>
              <%= ' GESTIÓN ' %>
            <% end %>
              </td>
          </tr>
          <tr>
            <td class="col-xs-5 text-right"><strong>Factura:</strong></td>
            <td class="col-xs-7"><%= @tool.bill %></td>
          </tr>
          
          <tr>
            <td class="col-xs-5 text-right"><strong>Costo:</strong></td>
            <td class="col-xs-7"><%= @tool.cost %> Bs.</td>
          </tr>
          
          <tr>
            <td class="col-xs-5 text-right"><strong>Órden de Compra:</strong></td>
            <td class="col-xs-7"><%= @tool.buy_order %></td>
          </tr>
          
          <tr>
            <td class="col-xs-5 text-right"><strong>Fecha Adquisición:</strong></td>
            <td class="col-xs-7"><%= @tool.adquisition_date %></td>
          </tr>
        </table>

      </div>



<br><br>
<div class="col-xs-12">
  <div class="col-xs-6 text-left">

    <% if can? :create, @tool %>
          <%= link_to new_tool_path do %>
            <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Agregar Herramienta</button>
          <% end %> 
    <%end%>
    <% if can? :update, @tool %>
      <%= link_to edit_tool_path(@tool) do %>
        <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Editar</button>
      <% end %>
    <% end %>
    <% if can? :hide, @tool %>
          <%= link_to @tool, method: :delete, data: { confirm: '¿Estás seguro?' } do%>
            <button type="button" class="btn btn-danger"><span class="fa fa-times fa-1x"></span>&nbsp;&nbsp;Eliminar</button>
          <% end %>
    <%end%>
  </div>
  <div class="col-xs-6 text-right">

    <%= link_to tools_path do %>
      <button type="button" class="btn btn-primary"><span class="fa fa-arrow-left"></span>&nbsp;&nbsp;Atrás</button>
    <% end %>

  </div>
</div>
<br><br><br><br>
