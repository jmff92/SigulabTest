<div class="grid_12 push_5">
	<%= form_for(@relation) do |f| %>
	  <span class="red" style="margin-left:-130px; font-size: 99%;"> <%= @relation.errors.full_messages.first if @relation.errors.any? %> </span>
                <table style="margin-left:-130px;"><tr><td style="padding-right:10px;">
		  <div class="field"><span class="red">*</span>
			 <%= f.label "Nombre comercial del material/equipo" %><br>
			 <select id='relation_item_id' name='relation[item_id]'>
<% @items.each do |i| %>
<option value="<%= i.id %>"><%= i.nombre %></option>
<% end %>
</select>
		  </div></td><td style="margin-top:-5px;">
                      <div class="field">
          		<span class="red">*</span>
			 <%= f.label "Marca" %><br>
			 <%= f.text_field :marca %>
		  </div>
                        </td></tr><tr><td colspan="2">
                            <div class="field">
          		<span class="red">*</span>
			 <%= f.label "Modelo" %><br>
			 <%= f.text_area :modelo, :style => "width:410px; height:80px;" %>
		  </div>
                        </td></tr><tr><td style="padding-right:10px;">
		  <div class="field">
          <span class="red">*</span>
			 <%= f.label "Tipo" %><br>
                         <%= f.collection_select :tipo, Relation::Tipo, :to_s, :to_s, 
          :include_blank => false %>

		  </div></td><td>
		  <div class="field">
          <span class="red">*</span>
			 <%= f.label "Descripción General" %><br>
			 <%= f.text_field :descripcion_general %>
		  </div></td></tr><tr><td><h2>Descripción Específica</h2></td></tr><tr><td style="padding-right:10px;">
		  <div class="field">
          <span class="red">*</span>
			 <%= f.label "Materia Constitutiva" %><br>
			 <%= f.text_field :materia, :placeholder => "De qué está hecho" %>
                  </div></td><td style="padding-top:20px;">
		  <div class="field">
			 <%= f.label "Función" %><br>
			 <%= f.text_field :funcion, :placeholder => "Para qué sirve" %><br>
		  </div></td></tr>
                    
                    
                    <tr><td style="padding-right:10px;">
		  <div class="field">
          <span class="red">*</span>
			 <%= f.label "Aplicación Particular" %><br>
			 <%= f.text_field :aplicacion, :placeholder => "En qué será utilizado" %>
                  </div></td><td style="padding-top:20px;">
		  <div class="field">
			 <%= f.label "Ubicación Física" %><br>
			 <%= f.text_field :ubicacion, :placeholder => "Dónde estará localizado" %><br>
		  </div></td></tr>
                    
                    <tr><td><div class="field">
			 <%= f.label "Observaciones" %><br>
			 <%= f.text_field :observaciones, :placeholder => "Suministre cualquier información adicional que considere relevante y que no se haya mencionado" %><br>
		  </div></td></tr>
                    
                    <tr><td colspan="2" style=" padding-left:120px;">
                            <%= f.hidden_field :specification_id, :value => session['specification_sel_id'] %>
		  <div class="actions">
			 <%= f.submit "Aceptar", :style => "float:left;", data: { confirm: '¿Está seguro de la informacion que acaba de suministrar?' }  %>
		  </div>
		<% end %>
		<%= link_to '<button type="button" class="btn btn-primary" style="margin-top:-10px; margin-left:15px;"> Cancelar </button>'.html_safe, controller: "invitations" %>
   </td></tr></table>
</div>


