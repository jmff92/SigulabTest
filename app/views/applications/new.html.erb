<h1>Nueva Solicitud de Servicio</h1>
<ol class="breadcrumb">
	<li> <%=link_to 'Inicio', controller: 'statics'%></li>
	<li> <%=link_to 'Inventario', inventario_url %></li>
	<li class="active"> Solicitud de Servicio </li>
</ol>


<div id = "table2">
</div>
<br>

<div class="col-xs-12">


<div class="col-xs-8">
    <%= form_for @application, url: {action: 'create'}, html: { class: 'form-horizontal' } do |i| %> 

      <div class="form-group">
        <label for='income_lab_id' class="col-xs-4 control-label text-right">Fecha requerida: <span style="color:#FF0000">*</span></label>
        <div class="col-xs-4">
          <%= i.text_field :fechaRequerida, :class => "bootlayout-date" %>
        </div>
      </div>
      
      <div class="form-group">
        <label for='income_origin' class="col-xs-4 control-label text-right">Uso del Servicio: <span style="color:#FF0000">*</span></label>
        <div class="col-xs-4">    
          <%= i.select(:uso, [['DOCENTE'], ['INVESTIGACIÓN']] ) %>
        </div>
      </div>

      <div class="form-group">
        <label for='income_sae_code' class="col-xs-4 control-label text-right">Descripción: <span style="color:#FF0000">*</span></label>
        <div class='col-xs-4'>
          <%= i.text_area :descripcion %>
        </div>
      </div>

    <% end %>

  </div>



<div class="col-xs-4">
    <table id="itemTable" class="table table-hover">
      <thead>
        <tr>
          <th class="tg-hgcj"> Código del Bien</th>
          <th class="tg-093g">Nombre</th>
        </tr>
      </thead>

      <tbody>
        <% @equipment.each do |equipment| %>
          <tr>
            <td class="tg-s6z2"><%= equipment.id2 %></td>
            <td class="tg-s6z2"><%=  equipment.name  %></td>
          </tr>
        <% end %>
        <% @tools.each do |tool| %>
          <tr>
            <td class="tg-s6z2"><%= tool.id2 %></td>
            <td class="tg-s6z2"><%=  tool.name  %></td>
          </tr>
        <% end %>
        <% @instruments.each do |instrument| %>
          <tr>
            <td class="tg-s6z2"><%= instrument.id2 %></td>
            <td class="tg-s6z2"><%=  instrument.name  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <br>
<div class="col-xs-12">
<i class="fa fa-arrow-left"></i><%= link_to ' Atrás', inventario_url %>
</div>
<br><br><br><br>
