<%= stylesheet_link_tag 'demo_table_jui.css'%>
<%= stylesheet_link_tag 'examples_support/themes/smoothness/jquery-ui-1.8.4.custom.css'%>
<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<div class="row">
	<div class="col-xs-12">
		<ol class="breadcrumb">
			<li><%= link_to 'Inicio', controller: 'statics' %></li>
			<li><%= link_to 'Administración', administration_path %></li>
			<li><%= link_to 'Presupuesto', budget_path %></li>
			<li class="active"> Ejecuciones de <%= @execution.commitment.description %></li>
		</ol>
	</div>

	<div class="col-xs-12">
		<h2><center> Ejecuciones de <%= @execution.commitment.description %> </center></h2>
	</div>

	<div class="col-xs-12">
		<div class="well">
			El monto está expresado en bolívares.
		</div>
	</div>


	<div class="col-xs-12">
		<body id="dt_example" class="ex_highlight_row">

			<div id="container">
				<div id="demo">
					<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
						<thead>
							<tr>
								<th>Fecha de Elaboración</th>
								<th>Número de Documento</th>
								<th>Dependencia</th>
								<th class="text-right">Monto</th>
							</tr>
						</thead>

						<tbody>
				      		<% @executions.each do |i| %>
								<tr>
									<td><%= i.check_elaboration_date %></td>
									<td><%= link_to i.code, i %></td>
									<td><%= i.commitment.lab.sae_name %></td>							
									<td class="text-right"><%= number_to_currency(i.check_amount, format: "%n", delimiter: ".", separator: ",") %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
					<div class="spacer"></div>
				</div>
			</div>
		</body>

		<br></br>
		<% if @sum > 0 %>
			<div class="well" align="right">
				<h4>Monto Total Ejecutado: <%= number_to_currency(@sum, format: "%n", delimiter: ".", separator: ",") %>  Bs.</h4>
			</div>
		<% end %>

	</div>

</div>
