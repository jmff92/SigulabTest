<div class="grid_12">
      <ol class="breadcrumb">
          <li> <%=link_to 'Inicio', controller: 'statics'%></li>
		  <li> <%=link_to 'Compras', compras_url %></li>
		  <li> <%=link_to 'Especificaciones Técnicas', specifications_url %></li>
          <li> <%=link_to 'Solicitud', solicitud_url %></li>
          <li class="active"> Invitación </a></li>
      </ol>
</div>

<div class="grid_12">
	<div id="tittle">
	<table id="invitationTable" class="table table-bordered">
	  <thead>
       <tr>
		   <th>Nombre de la empresa</th>
		   <td><%= @invitation.nombreEmpresa %></td>
		 </tr>
		 <tr>
		   <th>Responsable del proyecto</th>
		   <td><%= @invitation.responsable %></td>
		 </tr>
		 <tr>
		   <th>Correo del solicitante</th>
		   <td><%= @invitation.correo %></td>
		 </tr>
		 <tr>
		   <th>Contacto de la empresa</th>
		   <td><%= @invitation.direccion %></td>
		 </tr>
		 <tr>
		   <th>Telefono del solicitante</th>
		   <td><%= @invitation.telefono %></td>
		 </tr>
       <tr>
		   <th>Telefono adicional</th>
		   <td><%= @invitation.telefonoAdicional %></td>
		 </tr>
	  </thead>
   </table>
   <%= link_to '<button type="button" class="btn btn-primary"> Agregar otra invitación </button>'.html_safe, new_invitation_path(@invitation) %><br><br>
   <%= link_to '<button type="button" class="btn btn-primary"> Descargar invitación  </button>'.html_safe,
                                             invitation_path(@invitation, :format => 'pdf') %> <br><br>
   <%= link_to '<button type="button" class="btn btn-primary"> Modificar </button>'.html_safe, edit_invitation_path(@invitation) %><br><br>
   <%= link_to '<button type="button" class="btn btn-primary"> Eliminar </button>'.html_safe, @invitation,method: :delete,
       data: { confirm: '¿Está seguro que desea eliminar la Carta de invitación?' } %></td><br><br>
   <%= link_to '<button type="button" class="btn btn-primary"> Finalizar </button>'.html_safe, invitations_path %><br>
  </div>
</div>



