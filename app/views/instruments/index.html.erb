<%= javascript_include_tag 'jquery.dataTables.js' %>
<%= javascript_include_tag 'tabla.js' %>

<ol class="breadcrumb">
  <li> <%=link_to 'Inicio', controller: 'statics'%></li>
  <li> <%=link_to 'Inventario', inventario_url %></li>
  <li class="active"> Instrumentos de Medición </li>
</ol>  

<div id="LeDivInstrumentos">
  <h1><i class="fa fa-eyedropper"></i> Instrumentos de Medición</h1>

  <br>
      <body class="ex_highlight_row">
        <div id="container">
          <div id="demo">

            <%= form_tag (new_loan_path) do %>
            
              <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
                <thead>
                  <tr>
                    <% if @sum > 0 %>
                      <th></th>
                    <% end %>
                    <th class="tg-093g">Nombre</th>
                    <th class="tg-093g">Marca</th>
                    <th class="tg-093g">Número de Bien Nacional</th>
                    <th class="tg-hgcj">Ubicación</th>
                    <th class="tg-hgcj">Responsable</th>
                   
                  </tr>
                </thead>

                <tbody>
                  <% @instruments.each do |instrument| %>
                    <tr>
                      <% if @sum > 0 %>
                        <td class="tg-s6z2"><%= check_box_tag "item_ids[]", instrument.id2 %></td>
                      <% end %>
                      <td class="tg-s6z2"><%= link_to instrument.name, instrument %></td>
                      <td class="tg-s6z2"><%= instrument.brand %></td>
                      <td class="tg-s6z2"><%= instrument.national_good %></td>
                      <td class="tg-s6z2"><%= instrument.location %></td>
                      <td class="tg-qpa3"><%= instrument.responsible %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <div class="spacer"></div>
          </div>
        </div>
      </body>




   <br>

    <% if can? :create, @instrument %>
      <i class="fa fa-plus-circle"></i><%= link_to ' Nuevo Instrumento', new_instrument_path, 'data-no-turbolink' => true %> | 
    <%end%>
    <i class="fa fa-exchange"></i><%= submit_tag ' Solicitar Préstamo ', :class => "linkButton" %> | 
    <i class="fa fa-phone"></i><%= link_to ' Solicitar Servicio ', new_application_path %> | 
    <i class="fa fa-arrow-left"></i><%= link_to ' Atrás ', inventario_url %>
    <% end %>
    <br><br><br><br><br><br><br>
    

  </div>
 </div>

