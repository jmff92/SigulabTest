# encoding: utf-8
<div class="grid_12 push_5">
  <%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
      <h2>Rellene todos los campos obligatorios</h2>
      <br>
  <% end %>
	<div class ="table">
 		   <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Tipo de servicio" %><br>
          <%= f.collection_select :tipo, Service::TipoServicio, :to_s, :to_s, 
          :include_blank => true %>
  		 </div>
       <div class="field">
         <span class="red">*</span>
         <%= f.label "Descripción del Servicio" %><br>
          <%= f.text_area :descripcion, :placeholder => "Máximo 100 caracteres" %>
       </div>
        <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Nombre del equipo" %><br>
          <%= f.text_field :nombre %>
  		 </div>
       <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Número del bien" %><br>
          <%= f.text_field :numeroBien %>
  		 </div>
  		 <div class="field">
         <span class="red">*</span>
    		 <%= f.label "Ubicación del equipo"  %><br>
    		 <%= f.text_area :ubicacion %>
  		 </div><br>
  		 <div class="actions">
       <%= f.submit "Aceptar", data: { confirm: '¿Está seguro de la informacion que acaba de suministrar?' } %>
  		 </div><br>
       <% end %>
  		 <%= link_to '<button type="button" class="btn btn-primary"> Volver a la página anterior </button>'.html_safe,    especificacionesTecnicas_url %><br>
	</div>
</div>

<style>


input[type="submit"] {

display: inline-block;
padding: 6px 12px;
margin-bottom: 0;
font-size: 14px;
font-weight: 400;
line-height: 1.42857143;
text-align: center;
white-space: nowrap;
vertical-align: middle;
color: #fff;
background-color: #428bca;
border-color: #357ebd;
border: 1px solid transparent;
border-radius: 4px;


}


select {
    padding:3px;
    margin: 0;
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;
    background: white;
    outline:none;
    display: inline-block;
    cursor:pointer;
    width: 200px;
    height: 35px;
   font-size: 14px;
}

.red {

font-size: 20px;
color: red;

}


input[type="text"], textarea {

display: block;
width: 200px;
height: 34px;
padding: 6px 12px;
font-size: 14px;
line-height: 1.42857143;
color: #555;
background-color: #fff;
background-image: none;
border: 1px solid #ccc;
border-radius: 4px;
maxlength:100;

}

input[type="text"]:focus, textarea:focus { 
    outline: none;
    border-color: #9ecaed;
    box-shadow: 0 0 10px #9ecaed;
}

h2 {

position:relative;
right: 150px;
color:red;
font-size: 20px;
right: 60px;
}

.field_with_errors {
padding: 0;
background-color: transparent;
display: table;
}

</style>

