<div class="row">
	<div class="col-xs-12">
		<ol class="breadcrumb">
			<li><%= link_to 'Inicio', controller: 'statics' %></li>
			<li><%= link_to 'Administracion', administration_path %></li>
			<li><%= link_to 'Compromisos', commitments_path %></li>
			<li class="active">Nuevo Compromiso</li>
		</ol>
	</div>
	<% if @commitment.errors.any? %>
		<div class="col-xs-12" role="alert">
			<div class="alert alert-danger">
				<ul>
					<% @commitment.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>	
			</div>
		</div>
	<% end %>
	<div class="col-xs-12">
		<%= form_for @commitment, url: {action: 'create'}, html: { class: 'form-horizontal' } do |i| %>	
			<div class="form-group">
				<label for='commitment_lab_id' class="col-xs-2 control-label text-right">Laboratorio *</label>
				<div class="col-xs-3">
					<select id="commitment_lab_id" name="commitment[lab_id]" form="new_commitment" class="form-control">
						<% @labs.each do |l| %>
							<option value='<%= l.id %>'><%= l.sae_name %></option>
						<% end %>
					</select>
				</div>
			</div>	
		
			<div class="form-group">
				<label for='commitment_code' class="col-xs-2 control-label text-right">Codigo *</label>
				<div class='col-xs-4'>
					<%= i.text_field :code, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<label for='commitment_recipient' class="col-xs-2 control-label text-right">Beneficiario *</label>
				<div class='col-xs-4'>
					<%= i.text_field :recipient, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<label for='commitment_description' class="col-xs-2 control-label text-right">Descripcion *</label>
				<div class='col-xs-4'>
					<%= i.text_field :description, class: 'form-control' %>
				</div>
			</div>
						
			<div class="form-group">
				<label for='commitment_amount' class="col-xs-2 control-label text-right">Monto *</label>
				<div class='col-xs-4'>
					<div class="input-group">
						<%= i.text_field :amount, class: 'form-control' %>
						<span class="input-group-addon">Bs.F.</span>
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for='commitment_date' class="col-xs-2 control-label text-right">Fecha *</label>
				<div class='col-xs-4'>
					<%= i.date_field :date, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-xs-offset-2 col-xs-10">
					<button type="submit" class="btn btn-default btn-primary">Agregar Compromiso</button>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-xs-11 col-xs-offset-1">
		<p>* Los campos son obligatorios </p>
	</div>
</div>
