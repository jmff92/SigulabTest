
<div class="row">
	<div class="col-xs-12">
		<ol class="breadcrumb">
			<li><%= link_to 'Inicio', controller: 'statics' %></li>
			<li><%= link_to 'AdministraciÃ³n', controller: 'administration' %></li>
			<li class="active">Presupuesto</li>
		</ol>
	</div>
	<div class="col-xs-8 col-xs-offset-2">
		<ul class="administration-list">

		<% if current_user.labBoss? or current_user.labassistant? %>
			<%
				if current_user.username == "labA"
			      @idLab = 1
			    elsif current_user.username == "labB"
			      @idLab = 2
			    elsif current_user.username == "labC"
			      @idLab = 3
			    elsif current_user.username == "labD"
			      @idLab = 4
			    elsif current_user.username == "labE"
			      @idLab = 5
			    elsif current_user.username == "labF"
			      @idLab = 6
			    elsif current_user.username == "labG"
			      @idLab = 7
			    end
			%>
		<% end %>

			<% if current_user.director? or current_user.directorate? or current_user.acquisition? or current_user.acquisition_analist? or current_user.import? or current_user.import_analist? or current_user.manage? or current_user.manage_analist? or current_user.quality? or current_user.quality_analist? or current_user.labBoss? or current_user.labassistant? %>
				<li><%= link_to action: :summary do %>
					<h3></he><span class="fa fa-signal"></span>Resumen Presupuestario</h3>
				<% end %></li>
			<% end %>

			<% if current_user.director? or current_user.directorate? or current_user.acquisition? or current_user.acquisition_analist? or current_user.import? or current_user.manage? or current_user.manage_analist? or current_user.quality? %>
				<li><%= link_to controller: :incomes do %>
					<h3><span class="fa fa-plus-circle"></span>Ingresos</h3>
				<% end %></li>
			<% else %>				
			    <!-- falta obtener lab -->
				<% if current_user.labBoss? or current_user.labassistant? %>
					<li><%= link_to controller: 'incomes', action: 'list_lab', id: @idLab do %>
						<h3><span class="fa fa-plus-circle"></span>Ingresos del Laboratorio</h3>
					<% end %></li>
				<% end %>
			<% end %>

			<% if current_user.director? or current_user.directorate? or current_user.gsmp? or current_user.acquisition_analist? or current_user.acquisition? or current_user.manage? or current_user.manage_analist? or current_user.quality? or current_user.quality_analist? or current_user.import? or current_user.import_analist? or current_user.labBoss? %>
				<li><%= link_to controller: :paymentauths do %>
					<h3><span class="fa fa-money"></span>Autorizaciones de Pago</h3>
				<% end %></li>
			<% end %>

			<% if current_user.director? or current_user.directorate? or current_user.acquisition? or current_user.acquisition_analist? or current_user.import? or current_user.manage? or current_user.manage_analist? or current_user.quality? %>
				<li><%= link_to controller: :commitments do %>
					<h3><span class="fa fa-minus-circle"></span>Compromisos</h3>
				<% end %></li>
			<% else %>				
				<% if current_user.labBoss? or current_user.labassistant? %>
					<li><%= link_to controller: 'commitments', action: 'list_lab', id: @idLab do %>
						<h3><span class="fa fa-minus-circle"></span>Compromisos del Laboratorio</h3>
					<% end %></li>
				<% end %>
			<% end %>			

			<% if current_user.director? or current_user.directorate? or current_user.acquisition? or current_user.acquisition_analist? or current_user.import? or current_user.manage? or current_user.manage_analist? or current_user.quality? %>
				<li><%= link_to controller: :executions do %>
					<h3><span class="fa fa-check-circle"></span>Ejecuciones</h3>
				<% end %></li>
			<% else %>				
				<% if current_user.labBoss? or current_user.labassistant? %>
					<li><%= link_to controller: 'executions', action: 'list_lab', id: @idLab do %>
					<h3><span class="fa fa-check-circle"></span>Ejecuciones del Laboratorio</h3>
					<% end %></li>
				<% end %>
			<% end %>					

		</ul>
	</div>
